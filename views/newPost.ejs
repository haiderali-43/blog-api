<form action="" method="post" enctype="multipart/form-data" onsubmit="formvalidation()">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" name="content"></textarea>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" class="form-control" name="images" multiple onchange="previewImage()">
    </div>
    <div id="image-preview"></div>
    <button type="submit" class="btn btn-warning btn-lg">Create Post</button>
</form>
<script>
    function previewImage() {
        const preview = document.getElementById('image-preview');
        preview.innerHTML = '';
        const files = document.querySelector('input[type=file]').files;
        for (let i = 0; i < files.length; i++) {
            const img = document.createElement('img');
            img.src = URL.createObjectURL(files[i]);
            img.classList.add('img-thumbnail', 'mr-2', 'mb-2');
            img.style.width = '150px';
            preview.appendChild(img);
        }
    }


    function formvalidation() {
        const title = document.forms["form"]["title"].value;
        const content = document.forms["form"]["content"].value;
        const images = document.forms["form"]["images"].value;
        if (title == "") {
            alert("Title must be filled out");
            return false;
        }
        if (content == "") {
            alert("Content must be filled out");
            return false;
        }
        if (images == "") {
            alert("Images must be filled out");
            return false;
        }
    }



</script>